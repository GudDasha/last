<Page x:Class="Мероприятия1.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Мероприятия1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="70"></RowDefinition>
        </Grid.RowDefinitions>
        <Label FontSize="30" HorizontalAlignment="Center" >Главное окно системы</Label>
        <DataGrid x:Name="gridEvent" Grid.Row="1" IsReadOnly="True" MinColumnWidth="200" MaxColumnWidth="500" Margin="20">

        </DataGrid>
        <Button Grid.Row="2" Width="100" Height="20" HorizontalAlignment="Right" Margin="0 0 20 0" Click="Button_Click" >Авторизироваться</Button>
    </Grid>
</Page>
